{
  "name": "calcbook",
  "displayName": "CalcBook",
  "description": "Real time math equation evaluations",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CPKreu/CalcBook"
  },
  "publisher": "cpkreu",
  "icon": "img/logo.png",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "calcbook",
        "aliases": [
          "CalcBook",
          "calcbook"
        ],
        "extensions": [
          "clb"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "img/logo.png",
          "light": "img/logo.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "calcbook",
        "scopeName": "source.calcbook",
        "path": "./syntaxes/calcbook.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "calcbook.showDetailsPane",
        "title": "CalcBook: Show Details",
        "icon": "$(inspect)"
      },
      {
        "command": "calcbook.copyTeX",
        "title": "Copy as TeX"
      },
      {
        "command": "calcbook.newCalcbookFile",
        "title": "Create: New CalcBook File",
        "shortTitle": "CalcBook"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "calcbook.showDetailsPane",
          "when": "editorLangId == 'calcbook'"
        }
      ],
      "editor/context/copy": [
        {
          "command": "calcbook.copyTeX",
          "when": "editorLangId == 'calcbook'"
        }
      ],
      "file/newFile": [
        {
          "command": "calcbook.newCalcbookFile",
          "group": "File"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-web": "^0.0.66",
    "assert": "^2.1.0",
    "esbuild": "^0.25.6",
    "eslint": "^9.19.0",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "html-entities": "^2.5.2",
    "mathjs": "^14.2.1"
  }
}
